{
  "name": "pokedex",
  "version": "1.0.0",
  "description": "A high-performance, modular Pokedex application featuring real-time search, comparison tools, EV/IV training guides, and dynamic theming.",
  "main": "electron-main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "electron:dev": "electron .",
    "dist": "npm run build && electron-builder"
  },
  "build": {
    "appId": "com.sirac.pokedex",
    "productName": "Pokedex",
    "files": [
      "dist/**/*",
      "assets/**/*",
      "electron-main.js",
      "preload.js"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico",
      "installerHeaderIcon": "assets/icon.ico"
    }
  },
  "devDependencies": {
    "electron": "^31.0.0",
    "electron-builder": "^24.13.3",
    "vite": "^5.1.1",
    "@vitejs/plugin-react": "^4.2.1",
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
